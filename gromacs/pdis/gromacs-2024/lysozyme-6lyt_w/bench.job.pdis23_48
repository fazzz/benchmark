#! /bin/sh
#PBS -l select=1:ncpus=48:mpiprocs=48:ompthreads=1:host=pdis23
#PBS -j oe
#PBS -N gx24_lys

module load gromacs/2024.2
source /opt/gromacs/2024.2/intel/bin/GMXRC

gmx_mpi grompp -f input/production.mdp -o pdis23_48/production.tpr -c input/final_density_stabilization.gro -p input/topol.top

cd pdis23_48

mpirun -np 48 gmx_mpi mdrun -noconfout -maxh 0.1 -deffnm production

rm production.edr
rm production.tpr
rm production.xtc
rm production.trr
rm mdout.mdp
rm \#*

